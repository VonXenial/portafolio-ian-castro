---
interface Props {
  title?: string;
  description?: string;
}

const { 
  title = "Ian Castro | Ingeniero en Informática", 
  description = "Portafolio profesional de Ian Leonardo Castro Contreras. Desarrollo web, aplicaciones móviles y videojuegos."
} = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <meta name="author" content="Ian Leonardo Castro Contreras" />
    
    <!-- Open Graph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <title>{title}</title>
  </head>
  <body class="bg-transition antialiased">
    <!-- Film grain overlay -->
    <div class="grain-overlay" aria-hidden="true"></div>
    
    <!-- Suits background overlay -->
    <div class="suits-overlay" aria-hidden="true"></div>
    
    <!-- Custom Cursor Elements -->
    <div class="cursor-dot" id="cursor-dot"></div>

    <!-- Main content -->
    <slot />

    <!-- Lenis Smooth Scroll & Cursor Logic -->
    <script>
      import Lenis from 'lenis';
      import gsap from 'gsap';
      import { ScrollTrigger } from 'gsap/ScrollTrigger';

      gsap.registerPlugin(ScrollTrigger);

      // --- Custom Cursor Logic ---
      const cursorDot = document.getElementById('cursor-dot');
      
      // Initial position usually hidden or center
      gsap.set(cursorDot, { xPercent: -50, yPercent: -50 });

      // Move cursor
      window.addEventListener('mousemove', (e) => {
        const { clientX, clientY } = e;
        
        // Dot moves with slight lag for smoothness
        gsap.to(cursorDot, { x: clientX, y: clientY, duration: 0.1 });
      });

      // Hover effects can be re-added here if we want to scale the dot itself, but user asked to just remove the layer.
      
      // --- Lenis Initialization ---
      const lenis = new Lenis({
        duration: 1.2,
        easing: (t) => Math.min(1, 1.001 - Math.pow(2, -10 * t)),
        orientation: 'vertical',
        gestureOrientation: 'vertical',
        smoothWheel: true,
      });

      // Connect Lenis to GSAP ScrollTrigger
      lenis.on('scroll', ScrollTrigger.update);

      gsap.ticker.add((time) => {
        lenis.raf(time * 1000);
      });

      gsap.ticker.lagSmoothing(0);

      // Background Suits Parallax Effect
      const suitsOverlay = document.querySelector('.suits-overlay');
      if (suitsOverlay) {
        gsap.to(suitsOverlay, {
          backgroundPosition: '0px 1000px', // Move background pattern significantly to create flow effect
          ease: 'none',
          scrollTrigger: {
            trigger: document.body,
            start: 'top top',
            end: 'bottom bottom',
            scrub: true,
          }
        });
      }

      // Background color transition on scroll
      const body = document.body;
      
      ScrollTrigger.create({
        start: 0,
        end: 'max',
        onUpdate: (self) => {
          const progress = self.progress;
          // Interpolate from burgundy (#4a0404) to stone (#1a1a1a)
          const r = Math.round(74 - (74 - 26) * progress);
          const g = Math.round(4 - (4 - 26) * progress);
          const b = Math.round(4 - (4 - 26) * progress);
          body.style.backgroundColor = `rgb(${r}, ${g}, ${b})`;
        }
      });
    </script>
  </body>
</html>

<style is:global>
  @import '../styles/global.css';
</style>
